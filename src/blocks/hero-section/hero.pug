mixin heroSection(backgroundImg, subtitle, mainTitle, caption, buttonText)
    main.hero 
        .hero__bg 
            img(src=backgroundImg, alt="background image").hero__bg-img
        .hero__wrap 
            .hero__content
                .hero__textBox.textBox
                    .hero__textBox-subtitle= subtitle
                    .hero__textBox-title= mainTitle
                    .hero__textBox-caption= caption
                    
                    if(buttonText)
                    .hero__textBox-button
                        each text in buttonText.split('|')
                            a.button.button__filled= text
                            //- +button('a', 'filled', false, text)

